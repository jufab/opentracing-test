				<!-- CONFIGURATION CARTES APPEL -->
				<sldng.carteappel.url-configuration>configurationCarteAppel.xml</sldng.carteappel.url-configuration>
				<sldng.carteappelpn.url-configuration>configurationCarteAppelPN.xml</sldng.carteappelpn.url-configuration>
                <!--DEV-->
				<!--<sldng.carteappel.url-configuration>http://wappl-vipa-02utme.sii24.pole-emploi.intra:8201</sldng.carteappel.url-configuration>-->
                <!--R7-->
                <!--<sldng.carteappel.url-configuration>http://wappl-vipa-02qtme.sii24.pole-emploi.intra:8201/ServeurCarteAppel/ServletConfig?Type=PN</sldng.carteappel.url-configuration>-->
				<sldng.metrologie.url-configuration>metrologie.xml</sldng.metrologie.url-configuration>
				<sldng.metrologie.taille-tampon-emission>1</sldng.metrologie.taille-tampon-emission>
