	<!-- Profiles -->
	<profiles>
		<profile>
            <id>desactiver-controles</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
			<properties>
				<!--LOG -->
				<log.nom.domaine>sldng-epure</log.nom.domaine>
				<log.duree.retention>d</log.duree.retention>
				<log.niveau.root>DEBUG</log.niveau.root>
				<log.niveau.net.sf.ehcache>${log.niveau.root}</log.niveau.net.sf.ehcache>
				<log.niveau.fr.pe.carteappel.emission.GestionnaireEmissionCarteAppelImpl>${log.niveau.root}</log.niveau.fr.pe.carteappel.emission.GestionnaireEmissionCarteAppelImpl>
				<log.niveau.fr.pe.sldng.metrologie>${log.niveau.root}</log.niveau.fr.pe.sldng.metrologie>
				<log.niveau.fr.pe.sldng>${log.niveau.root}</log.niveau.fr.pe.sldng>
				<sldng.trace.es>${log.niveau.root}</sldng.trace.es>

				<!-- DESACITVATION CONTROLE EN TETES -->
				<sldng.integration.desactiver-controle-entetes>false</sldng.integration.desactiver-controle-entetes>
				<!-- DESACITVATION CONTROLE SECU -->
				<sldng.securite.desactiver-controle>false</sldng.securite.desactiver-controle>
				<!-- DESACITVATION CONTROLE CONTROLE ANNUAIRE -->
